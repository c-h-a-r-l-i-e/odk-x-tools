<div class="linkedTable layout-zebra rounded">
    {{> labelHint}}
    {{#unless display.hide_add_instance}}
        <a class="addInstance btn btn-default btn-lg">
            <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
            {{localizeText display.new_button_label}}
        </a>
    {{/unless}}
    <table class="linked-table">
        <thead>
            <tr class="tableGrid">
                {{#each columns}}
                    <th> {{localizeText title}}</th>
                {{/each}}
            </tr>
        </thead>
        <tbody>
            {{#each instances}}
                <tr class="tableGrid">
                    <td class="tableGrid"><span>{{savepoint_timestamp}}</span></td>
                    <td class="tableGrid"><span>{{display_field}}</span></td>
                    <td class="tableGrid"><span class="glyphicon {{icon_class}}"></span></td>
                    <td class="tableGrid rowControls">
                        <div class="rowControls" data-role="controlgroup" data-type="horizontal">
                            <a instance-id="{{instance_id}}" title="edit" class="openInstance btn btn-default">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </a>
                            {{#unless ../display.hide_delete_button}}
                                <a instance-id="{{instance_id}}" instance-name="{{display_field}}" title="delete" class="deleteInstance btn btn-default">
                                    <span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span>
                                </a>
                            {{/unless}}
                        </div>
                    </td>
                </tr>  
            {{/each}}
        </tbody>
    </table>
</div>